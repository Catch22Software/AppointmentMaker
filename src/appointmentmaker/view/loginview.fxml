                  <Button fx:id="loginbutton" layoutX="135.0" layoutY="18.0" mnemonicParsing="false" onAction="#handleLoginAction" text="LOGIN" />
                <Button fx:id="clearbutton" mnemonicParsing="false" onAction="#handleClearFieldsAction" text="CLEAR" />
              </buttons>
               <padding>
                  <Insets right="30.0" />
               </padding>
            </ButtonBar>
         </children>
      </VBox>
   </children>
